<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/perro1"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/foreground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgPrincipal"
            android:background="@drawable/borders">

            <ImageView
                android:id="@+id/imgHuesoIzquierdo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_256_2"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/text_margin_cardview"
                />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:layout_toRightOf="@+id/imgHuesoIzquierdo"
                android:textSize="@dimen/text_size_cardview"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/text_margin_cardview"/>


            <TextView
                android:id="@+id/tvPuntuacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/text_size_cardview"
                android:layout_toLeftOf="@+id/imgHuesoDerecho"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/text_margin_cardview"
                />

            <ImageView
                android:id="@+id/imgHuesoDerecho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_256_3"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/text_margin_cardview"/>

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>