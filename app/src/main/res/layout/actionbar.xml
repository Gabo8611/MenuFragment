<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/elevacion_actionbar"
    android:titleTextColor="@color/colorBlanco"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:titleTextColor="@color/colorBlanco"
    android:navigationIcon="@drawable/cat_footprint_48"
    android:id="@+id/toolbar"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivIconTB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/cat_footprint_48"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Petagram"
            android:textColor="@color/colorBlanco"
            android:textSize="@dimen/text_title_size"/>

        <ImageView
            android:id="@+id/ivRatingTB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/star_5_hotel_48"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
    </RelativeLayout>

</android.support.v7.widget.Toolbar>